{
	"manifest_version": 2,

	"name": "Livecoding.tv - Live Channels",
	"description": "Livecoding.tv extension for displaying a followed channels which are live.",
	"version": "1.0",

	"permissions": 
	[
	 	"tabs",
		"notifications",
		"http://*/*",
		"https://*/*"
	],

	"icons": 
	{ 
		"16": "img/lctv16.png",
		"48": "img/lctv48.png",
		"128": "img/lctv128.png" 
	},

	"browser_action": 
	{
		"default_icon": 
		{                    
			"16": "img/lctv16.png"         
		},
		"default_popup": "popup.html"
	},

  	"background":
	{
		"scripts": ["js/jquery-2.0.3.min.js", "js/bootstrap.min.js", "js/background.js"]
	}
}